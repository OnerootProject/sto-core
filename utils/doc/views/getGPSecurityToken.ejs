<script type="text/javascript">

  function runCode() {
    getGPSecurityToken(config.contract.GP).then();
  }

  async function getGPSecurityToken(policyAddress) {
    var result = "";
    try {
      var param = {address: policyAddress, abi: abiGP};
      var contact = new GP(web3, param);
      var res  = await contact.securityToken();
      result += "result：" + res + "\n";
    } catch (e) {
      result += "error：" + e + "\n";
    }

    setResult(result);

  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    var code = runCode.toString()+"\n\n";
    code += getGPSecurityToken.toString() + "\n\n";
    code += "runCode();\n\n";
    setCode(code);

  });

</script>
