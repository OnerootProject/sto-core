<script type="text/javascript">

  function runCode() {
    var securityToken = config.contract.ST, tranche='', investor='0x866e43291293892bd0980adc4ec5166f33623d86', amount=web3.toWei(300,'ether');
    console.log(securityToken, tranche, investor, amount);
    mintTranche(securityToken, tranche, investor, amount).then();
  }

  async function mintTranche(securityToken, tranche, investor, amount) {
    var res = getWeb3Account();
    var account = res.data;
    var result = "账号：" + account +"\n";
    if(res.code!=0) {
      result += res.msg+ '\n';
      setResult(result);
      return;
    }

    try {
      var contract = {address: securityToken, abi: abiSecurityToken};
      var st = new SecurityToken(web3, contract);

      res = await st.startTrans(account);
      result += "nonce：" + res + "\n";

      res  = await st.mintTranche(tranche, investor, amount);
      result += "tx：" + res + "\n";
    } catch (e) {
      result += "error：" + e + "\n";
    }

    setResult(result);

  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    var code = getWeb3Account.toString()+"\n\n";
    code += mintTranche.toString() + "\n";
    setCode(code);

  });

</script>
