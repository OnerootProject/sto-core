<script type="text/javascript">
  function runCode() {
    var _code = $('#code').val();
    console.log('code:', _code);
    eval(evalCode);
  }

  function evalCode() {
    test();
  }

  function test() {
    var res = web3.padRight(web3.fromAscii('ethereum'),66);
    setResult('fromAscii'+ res);
    res = '0x657468657265756d000000000000000000000000000000000000000000000000';
    setResult('hardcode:'+ res);
    res = web3.toAscii(res);
    setResult('toAscii'+ res);
  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    var code = evalCode.toString()+"\n\n";
    code += test.toString()+"\n\n";
    setCode(code);

  });



</script>
