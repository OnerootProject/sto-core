<%- include header %>

<div class="app-body">
  <%- include menu %>
  <main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item">RAC合约</li>
      <li class="breadcrumb-item active">批量删除权限</li>
    </ol>

    <div class="container-fluid">
      <div class="animated fadeIn">
        <div class="card">
          <div class="card-header">batchRemoveRole(operator, action)</div>
          <div class="card-body">
            <div class="bd-example">
              批量删除权限
            </div>
            <div class="row">
              <div class="col-sm-6">
                <input class="form-control" id="operator" type="text" name="operator" placeholder="请输入有效地址,如钱包/合约地址">
              </div>
              <div class="col-sm-6">
                <select class="form-control" id="role" name="role" multiple="multiple" size="5">
                  <option value="">选择权限</option>
                </select>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include code %>

  </main>
</div>
<script type="text/javascript">

  function runCode() {
    var operator=$('#operator').val();
    if(!operator) {
      operator='0x866e43291293892bd0980adc4ec5166f33623d86';
    }
    var action = $('#role').val();
    console.log(operator, action);
    if(!action) {
      alert('请先选择权限');
      return;
    }
    batchRemoveRole(operator, action).then();
  }

  async function batchRemoveRole(operator, action) {
    var res = getWeb3Account();
    var account = res.data;
    var result = "账号：" + account +"\n";
    if(res.code!=0) {
      result += res.msg+ '\n';
      setResult(result);
      return;
    }

    try {
      var nonce = await getWeb3Nonce(account);
      result += "nonce：" + nonce + "\n";
      var param = {address: config.contract.RAC, abi: abiRAC, sender: account, nonce: nonce};
      var rac = new RAC(web3, param);

      res  = await rac.batchRemoveRole(operator, action);
      result += "tx：" + res + "\n";
    } catch (e) {
      result += "error：" + e + "\n";
    }

    setResult(result);

  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    _initRole();
    var code = runCode.toString() + "\n\n";
    code += getWeb3Account.toString()+"\n";
    code += batchRemoveRole.toString() + "\n";
    setCode(code);

  });


  function _initRole() {
    for(var i=0;i<roles.length;i++) {
      $('#role').append("<option value='"+roles[i]+"'>"+roles[i]+"</option>");
    }

  }

</script>
<%- include footer %>
