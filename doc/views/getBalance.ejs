<script type="text/javascript">

  function runCode() {
    getBalance();
  }

  function getBalance() {
    var res = getWeb3Account();
    var result = "账号：" + res.data +"\n";
    if(res.code!=0) {
      result += res.msg+ '\n';
      setResult(result);
      return;
    }

    web3.eth.getBalance(res.data, function(err, balance) {
      result += "余额：" + web3.fromWei(balance) + " ETH\n";
      setResult(result);
    });

  }

  // var Web3 = require('web3');
  $(document).ready(function() {
    var code = getWeb3Account.toString()+"\n\n";
    code += getBalance.toString() + "\n";
    setCode(code);
    getBalance();

  });

</script>
